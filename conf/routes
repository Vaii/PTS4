# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET     /                                 controllers.Application.index

GET     /addlocation                        controllers.LocationController.loadLocationForm
GET     /alllocations                       controllers.LocationController.locationOverview
POST    /addinglocation                     controllers.LocationController.createLocation


GET     /Overview                           controllers.TrainingController.overview

# Trainingen

GET     /training/signup                  controllers.TrainingController.signUpCourse

# Account management

GET     /account/login                    controllers.AccountController.login
POST    /account/login                    controllers.AccountController.authentication
GET     /account/profile                  controllers.AccountController.profile
GET     /account/logout                   controllers.AccountController.logout


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


    